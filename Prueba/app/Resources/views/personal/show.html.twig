{% extends 'base.html.twig' %}

{% block body %}
    <h1>Personal</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ personal.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ personal.nombre }}</td>
            </tr>
            <tr>
                <th>Apepat</th>
                <td>{{ personal.apePat }}</td>
            </tr>
            <tr>
                <th>Apemat</th>
                <td>{{ personal.apeMat }}</td>
            </tr>
            <tr>
                <th>Edad</th>
                <td>{{ personal.edad }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('personal_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('personal_edit', { 'id': personal.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
